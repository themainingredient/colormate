{
  "name": "colormate",
  "version": "0.1.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "Colormate",
    "manifest": "src/manifest.json",
    "main": "colormate.sketchplugin",
    "assets": [
      "assets/**/*"
    ]
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch",
    "postinstall": "npm run build && skpm-link"
  },
  "devDependencies": {
    "@skpm/builder": "^0.5.11",
    "@skpm/extract-loader": "^2.0.2",
    "css-loader": "^1.0.0",
    "html-loader": "^0.5.1"
  },
  "resources": [
    "resources/**/*.js"
  ],
  "dependencies": {
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "sketch-module-web-view": "^2.1.5"
  },
  "author": "jeroennknol <jeroen-knol@live.nl>"
}
