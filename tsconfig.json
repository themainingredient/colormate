{
  "compilerOptions": {
    "target": "es2015", 
    "module": "es2015",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "noImplicitAny": false
  },
  "include": [
    "src/**/*", 
    "resources/**/*",
    "typings/**/*.d.ts", 
    "enums/**/*"
  ],
  "exclude": [
    "**/*.test.*"
  ]
}
