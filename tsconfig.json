{
  "compilerOptions": {
    "target": "es2015", 
    "module": "es2015",
    "downlevelIteration": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
  },
  "include": [
    "src/**/*", 
    "resources/**/*",
    "typings/**/*.d.ts"
  ]
}
